        xmlns:local="clr-namespace:TARGIL210819"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="425">
    <Grid>
        <TextBlock Name="TBLOCK" FontSize="{Binding ElementName=slider, Path=Value}" Text="{Binding ElementName=TBOX, Path=Text}" HorizontalAlignment="Left" Margin="142,134,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="108" Height="19"/>
        <TextBox Name="TBOX"   HorizontalAlignment="Left" Height="23" Margin="130,182,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Slider HorizontalAlignment="Left" Minimum="0" Maximum="200" Name="slider"  Margin="96,72,0,0" VerticalAlignment="Top" Width="184"/>

    </Grid>
</Window>
